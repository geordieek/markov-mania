{
  "name": "markov-mania",
  "version": "1.0.0",
  "description": "A Markov chain-based music generation system built with TypeScript for Max for Live",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:web": "vite build",
    "build:all": "pnpm run build && pnpm run build:web",
    "dev": "tsc --watch",
    "dev:web": "vite",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "start": "node dist/index.js",
    "demo": "node dist/demo/markovManiaDemo.js",
    "slides": "cd presentation/reveal.js && pnpm start",
    "clean": "rm -rf dist dist-web",
    "prebuild": "pnpm run clean"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.19.10",
    "@vitest/ui": "^3.2.4",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@tonejs/midi": "^2.0.28",
    "tone": "^14.9.17"
  }
}
